<Window x:Class="StereoSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StereoSharp"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <sharpGL:OpenGLControl
            MouseDown="View_MouseDown"
            FrameRate="60"
            Name="view"
            OpenGLDraw="OpenGLControl_OpenGLDraw"
            OpenGLInitialized="OpenGLControl_OpenGLInitialized"
            Resized="View_Resized"
            DrawFPS="False"
            RenderContextType="FBO" />
        <Label Name="fps" Margin="0,0,627,283" Foreground="White"/>
    </Grid>
</Window>
